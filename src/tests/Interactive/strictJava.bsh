
/**
    Test of the strict java functionality

	This is currently not in the test suite because the test harness, etc.
	will not run under strict java mode
*/
setStrictJava(true);

void assert(boolean cond) 
{
        if ( !cond )
                System.err.println("Assert failed");
}

// undeclared argument or return type
boolean flag;
try {
	// cause an error
	this.interpreter.eval("foo(a) { }");
} catch ( Exception e ) {
	flag = true;
}
assert( flag );

int a=5;
a=6;
{
	a=7;
}
assert(a==7);

// undeclared assignment
flag=false;
try {
	// cause an error
	this.interpreter.eval("b=42");
} catch ( Exception e ) {
	flag = true;
}
assert( flag );

int x=5;
void incrementX() 
{
    x=x+1;
	int y=2;
}
assert(y==void);

assert(x==5);
incrementX();
assert(x==6);

